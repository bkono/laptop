#!/usr/bin/env bash
### end common-components/bash-shebang

# Welcome to the thoughtbot laptop script! Be prepared to turn your laptop (or
# desktop, no haters here) into an awesome development machine.

# This file is auto-generated. Do not edit it by hand unless you know what
# you're doing. Please see 'CONTRIBUTING.md' for more information.
### end common-components/header

trap 'ret=$?; test $ret -ne 0 && printf "failed\n\n" >&2; exit $ret' EXIT

set -e
### end common-components/exit-trap

fancy_echo() {
  printf "\n%b\n" "$1"
}
### end common-components/shared-functions

fancy_echo "Installing bkonowitz/dotfiles, never leave home without them"
  git clone https://github.com/bkonowitz/dotfiles.git $HOME/.dotfiles
  pushd $HOME/.dotfiles
  sh install.sh
  popd
### end mac-components/dotfiles

if [[ ! -d "$HOME/.bin/" ]]; then
  mkdir "$HOME/.bin"
fi

if [ ! -f "$HOME/.zshrc" ]; then
  touch $HOME/.zshrc
fi

if [[ ":$PATH:" != *":$HOME/.bin:"* ]]; then
  echo 'export PATH="$HOME/.bin:$PATH"' >> ~/.zshrc
  export PATH="$HOME/.bin:$PATH"
fi
### end common-components/check-home-bin

fancy_echo "Changing your shell to zsh ..."
  chsh -s $(which zsh)
### end common-components/zsh

if [[ -f /etc/zshenv ]]; then
  fancy_echo "Fixing OSX zsh environment bug ..."
    sudo mv /etc/{zshenv,zshrc}
fi
### end mac-components/zsh-fix

if ! which brew &>/dev/null; then
  fancy_echo "Installing Homebrew, a good OS X package manager ..."
    ruby <(curl -fsS https://raw.github.com/Homebrew/homebrew/go/install)
    brew update

  if ! grep -qs "recommended by brew doctor" ~/.zshrc; then
    fancy_echo "Put Homebrew location earlier in PATH ..."
      echo "\n# recommended by brew doctor" >> ~/.zshrc
      echo "export PATH=\"/usr/local/bin:\$PATH\"\n" >> ~/.zshrc
      export PATH="/usr/local/bin:$PATH"
  fi
else
  fancy_echo "Homebrew already installed. Skipping ..."
fi
### end mac-components/homebrew

fancy_echo "Installing md5sha1sum, for those vital sha1 compares..."
  brew install md5sha1sum

fancy_echo "Installing openssl ..."
  brew install openssl

fancy_echo "Installing cmake ..."
  brew install cmake

fancy_echo "Installing tree, a pretty directory visualizer for the shell ..."
  brew install tree

fancy_echo "Installing watch, to execute a program periodically and show the output ..."
  brew install watch
### end mac-components/shell-tools

fancy_echo "Installing ctags, to index files for vim tab completion of methods, classes, variables ..."
  brew install ctags

fancy_echo "Installing git, to simplify maintaining an updated version ..."
  brew install git

fancy_echo "Installing macvim, a great editor even from the terminal ..."
  brew install macvim --override-system-vim

fancy_echo "Installing The Silver Searcher (better than ack or grep) to search the contents of files ..."
  brew install the_silver_searcher

fancy_echo "Installing tmux, to save project state and switch between projects ..."
  brew install tmux

fancy_echo "Installing reattach-to-user-namespace, for copy-paste and RubyMotion compatibility with tmux ..."
  brew install reattach-to-user-namespace

fancy_echo "Installing maven, for those java and scala dependency management needs ..."
  brew install maven

fancy_echo "Installing scala, a great functional and OO hybrid language ..."
  brew install scala

fancy_echo "Installing sbt, the build tool of choice for scala ..."
  brew install sbt

fancy_echo "Installing node, an enjoyable option for server side javascript ..."
  brew install node
### end mac-components/dev-environment

fancy_echo "Installing Redis, a good key-value database ..."
  brew install redis

fancy_echo "Installing Sqlite, a good file based rdbms ..."
  brew install sqlite
### end mac-components/persistence

fancy_echo "Installing rbenv, to change Ruby versions ..."
  brew install rbenv

  if ! grep -qs "rbenv init" ~/.zshrc; then
    echo 'export PATH="$HOME/.rbenv/bin:$PATH"' >> ~/.zshrc
    echo 'eval "$(rbenv init - --no-rehash)"' >> ~/.zshrc

    fancy_echo "Enable shims and autocompletion ..."
      eval "$(rbenv init -)"
  fi

  export PATH="$HOME/.rbenv/bin:$PATH"

fancy_echo "Installing rbenv-gem-rehash so the shell automatically picks up binaries after installing gems with binaries ..."
  brew install rbenv-gem-rehash

fancy_echo "Installing rbenv-ctags, automagically giving us ctags for the ruby stdlibs ...'
  brew install rbenv-ctags

fancy_echo "Installing ruby-build, to install Rubies ..."
  brew install ruby-build
### end mac-components/rbenv

versions = ("2.1.0" "jruby-1.7.10")

for version in ${versions[@]}
do

  fancy_echo "Installing Ruby $RUBY_VERSION ..."
    rbenv install $RUBY_VERSION

  fancy_echo "Setting $RUBY_VERSION as global default Ruby ..."
    rbenv global $RUBY_VERSION
    rbenv rehash

  fancy_echo "Updating to latest Rubygems version ..."
    gem update --system

  fancy_echo "Installing Bundler to install project-specific Ruby gems ..."
    gem install bundler --no-document

  fancy_echo "Installing rails ..."
    gem install rails --no-document

  fancy_echo "Installing rspec, because lets face it, ruby just isn't the same without it ..."
    gem install rspec --no-document

  fancy_echo "Installing guard for smooth development flow..."
    gem install guard --no-document

  fancy_echo "Installing thor for command line utilities ..."
    gem install thor --no-document

done

  fancy_echo "Installing GitHub CLI client ..."
    curl http://hub.github.com/standalone -sLo ~/.bin/hub
    chmod +x ~/.bin/hub
### end common-components/ruby-environment

fancy_echo "Configuring Bundler for faster, parallel gem installation ..."
  number_of_cores=$(sysctl -n hw.ncpu)
  bundle config --global jobs $((number_of_cores - 1))
### end mac-components/bundler

fancy_echo "Installing Heroku CLI client ..."
  brew install heroku-toolbelt

fancy_echo "Installing the heroku-config plugin to pull config variables locally to be used as ENV variables ..."
  heroku plugins:install git://github.com/ddollar/heroku-config.git
### end mac-components/heroku

